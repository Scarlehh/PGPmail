{
	"manifest_version": 2,
	"name": "PGPmail",
	"description": "Implement OpenPGP for GMail",
	"version": "1.0",
	"icons": {
        "128": "icon128.png"
    },
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": [
			"openpgp.js",
			"encrypt.js"
		]
	},
	"permissions": [
		"https://mail.google.com/",
		"https://inbox.google.com/"
	],
	"content_scripts": [{
			"matches": [
				"https://mail.google.com/*",
				"https://inbox.google.com/*"
			],
			"js": [
				"inboxsdk.js",
				"intercept.js"
			]
	}],
	"web_accessible_resources": [
		"encryptButton.png"
	]
}
